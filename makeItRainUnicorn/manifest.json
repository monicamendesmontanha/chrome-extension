{
  "name": "Make it rain(bow)",
  "description": "Embrace the inner unicorn and reflect it on the page",
  "version": "0.0.1",
  "manifest_version": 2,
  "browser_action": {
    "default_title": "Unlease the unicorn dust!",
    "default_icon": "icons/icon16.png"
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": [
    "activeTab"
  ],
  "background":{
    "scripts": ["background.js"],
    "persistent": false
  }
}